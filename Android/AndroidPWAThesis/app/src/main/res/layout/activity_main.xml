<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="154dp"
            android:layout_height="155dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/alterationsImageView"
            android:contentDescription="Random image with alterations" android:scaleType="centerCrop"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/randomImageView"
            app:layout_constraintStart_toStartOf="@+id/randomImageView"/>
    <ImageView
            android:layout_width="154dp"
            android:layout_height="155dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/randomImageView" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:contentDescription="Random Image" android:scaleType="centerCrop"/>
    <TextView
            android:text="Random image with alterations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Display a random image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintStart_toStartOf="@+id/titleTextView"/>

</android.support.constraint.ConstraintLayout>